@using QLyTV.Models
@model IEnumerable<UserModel>

<h2>Danh Sách Độc Giả</h2>

<style>
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    .table th, .table td {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    .table th {
        background-color: #f8f9fa;
        border-color: #dee2e6;
        text-align: left;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .btn {
        margin-right: 0.5rem;
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        line-height: 1.5;
        border-radius: 0.25rem;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>

<div class="row">
    <div class="col-6">
        <div class="input-group">
            <input type="text" id="searchBox" class="form-control" placeholder="Tìm kiếm theo tên hoặc email..." />
            <button class="btn btn-primary" id="searchBtn">Tìm kiếm</button>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="tblBody">
    </tbody>
</table>

<div class="row">
    <div class="col-0">
        <p>Chọn số lượng bản ghi:</p>
        <select class="form-control" id="pageSize">
            <option value="5" selected>5</option>
            <option value="10">10</option>
            <option value="20">20</option>
        </select>
    </div>
</div>
<div id="paginate"></div>

<style>
    .pagination-btn {
        background-color: #007bff; /* Màu xanh dương */
        color: white; /* Màu chữ */
        border: none; /* Xóa đường viền */
        border-radius: 5px; /* Bo góc */
        padding: 10px 15px; /* Khoảng cách bên trong nút */
        margin: 5px; /* Khoảng cách giữa các nút */
        cursor: pointer; /* Hiển thị con trỏ chuột */
        font-size: 16px; /* Cỡ chữ */
        transition: background-color 0.3s, transform 0.2s; /* Hiệu ứng hover */
    }

        .pagination-btn:hover {
            background-color: #0056b3; /* Đổi màu khi hover */
            transform: scale(1.1); /* Phóng to khi hover */
        }

        .pagination-btn:active {
            background-color: #003f7f; /* Đổi màu khi nhấn */
            transform: scale(1.05); /* Giảm nhẹ hiệu ứng */
        }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function loadDocGia(crrPage) {
        let pageSize = $("#pageSize").val();
        let searchQuery = $("#searchBox").val();

        $.ajax({
            url: '/DocGia/Paging',
            type: 'POST',
            data: { crrPage: crrPage, pageSize: pageSize, searchQuery: searchQuery },
            dataType: 'json',
            success: function (response) {
                if (response.success) {
                    const tbody = $("#tblBody");
                    tbody.empty();

                    let data = response.data;
                    let index = (crrPage - 1) * pageSize + 1;

                    $.each(data, function (index, item) {
                        var row = '<tr>' +
                            '<td>' + item.Id + '</td>' +
                            '<td>' + item.Name + '</td>' +
                            '<td>' + item.Email + '</td>' +
                            '<td>' +
                            '<a href="/DocGia/GetDocGiaDetails/' + item.Id + '" class="btn btn-info btn-sm">View Details</a> ' +
                            '<a href="/DocGia/Edit/' + item.Id + '" class="btn btn-warning btn-sm">Edit</a> ' +
                            '<a href="javascript:void(0);" onclick="deactivateDocGia(' + item.Id + ')" class="btn btn-danger btn-sm">Deactivate</a>' +
                            '</td>' +
                            '</tr>';
                        tbody.append(row);
                    });

                    setupPagination(response.totalPage, crrPage);
                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert("Có lỗi xảy ra khi tải dữ liệu.");
            }
        });
    }

    function setupPagination(totalPages, currentPage) {
        let pagination = $("#paginate");
        pagination.html(""); // Xóa phân trang cũ

        if (currentPage > 1) {
            pagination.append(`<button class="pagination-btn" onclick="loadDocGia(${currentPage - 1})">Previous</button>`);
        }

        for (let i = 1; i <= totalPages; i++) {
            if (i === currentPage) {
                pagination.append(`<button class="active pagination-btn">${i}</button>`);
            } else {
                pagination.append(`<button class="pagination-btn" onclick="loadDocGia(${i})">${i}</button>`);
            }
        }

        if (currentPage < totalPages) {
            pagination.append(`<button class="pagination-btn" onclick="loadDocGia(${currentPage + 1})">Next</button>`);
        }
    }

    function deactivateDocGia(id) {
        if (confirm("Bạn có chắc chắn muốn vô hiệu hóa độc giả này?")) {
            $.post('/DocGia/DeactivateDocGia', { id: id }, function (response) {
                if (response.success) {
                    alert(response.message);
                    loadDocGia(1); // Tải lại trang đầu tiên sau khi vô hiệu hóa
                } else {
                    alert(response.message);
                }
            });
        }
    }

    $(document).ready(function () {
        loadDocGia(1); // Tải trang đầu tiên

        // Thay đổi số lượng bản ghi
        $("#pageSize").change(function () {
            loadDocGia(1);
        });

        // Tìm kiếm khi nhấn nút tìm kiếm
        $("#searchBtn").click(function () {
            loadDocGia(1);
        });

        // Tìm kiếm khi nhấn Enter trong ô tìm kiếm
        $("#searchBox").keypress(function (e) {
            if (e.which == 13) { // Enter key pressed
                loadDocGia(1);
            }
        });
    });
</script>
