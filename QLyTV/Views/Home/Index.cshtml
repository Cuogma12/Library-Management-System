@{
    ViewBag.Title = "Home Page";
}

<main>
    <div class="container mt-4">
        <h2 class="text-center">Hệ thống Thư viện Online</h2>
        <div class="row mt-4">
            <!-- Card 1: Tổng số sách -->
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Tổng số sách</h5>
                        <p class="card-text">Hơn 5,000 đầu sách đa thể loại.</p>
                        <a href="/Sach/Index" class="btn btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
            <!-- Card 2: Số lượng mượn sách -->
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Số lượng mượn sách</h5>
                        <p class="card-text">Hơn 1,000 lượt mượn mỗi tháng.</p>
                        <a href="/ThongKe/ThongKeSach" class="btn btn-primary">Xem thống kê</a>
                    </div>
                </div>
            </div>
            <!-- Card 3: Tài khoản người dùng -->
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Người dùng</h5>
                        <p class="card-text">Hơn 2,000 tài khoản đã đăng ký.</p>
                        <a href="/DocGia/ListDocGia" class="btn btn-primary">Xem danh sách</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>