<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hệ Thống Quản Lý Thư Viện</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background-image: url('@Url.Content("~/Images/abstract-blue-background-with-depth_79603-874.jpg")');
            background-size: cover;
            background-position: center;
        }

        /* Header */
        .header {
            color: white;
            padding: 20px 0;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .header h1 {
                margin: 0;
                font-size: 30px;
                font-weight: 500;
                color: #ffffff;
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                transition: color 0.3s ease, text-shadow 0.3s ease;
            }

                .header h1:hover {
                    color: #ffcc00; /* Màu vàng khi hover */
                    text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5); /* Đổ bóng đậm hơn khi hover */
                }

       

        /* Footer */
        .footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 15px 0;
            position: relative;
          margin-top:60px;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <h1>Hệ Thống Quản Lý Thư Viện</h1>
    </header>

    <!-- Main Content -->
    <main class="content">
        <h2>@ViewBag.Title</h2>
        <div class="form-container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 - Hệ Thống Quản Lý Thư Viện. Tất cả quyền được bảo vệ.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
